<%= render partial: 'notices/shared/cover_page', :locals => {notice: notice} %>
<%= render partial: 'notices/shared/logo_and_address_shop' %>
<%= render partial: "notices/shared/shop_address", :locals => {notice: notice} %>

<table class="total_table" border="0">
  <tbody>
    <tr>
      <td><strong>Email notification sent to:</strong> <%= notice.employer_email %></td>
    </tr>
  </tbody>
</table>

<%= render partial: "notices/shared/date", :locals => {notice: notice} %>

<table class="total_table" border="0" style="margin-top: 10px">
  <tbody>
    <tr>
      <td><b>DENTAL CARRIER EXIT FROM <%= Settings.site.short_name.upcase %>’S SMALL BUSINESS MARKETPLACE</b></td>
    </tr>
  </tbody>
</table>

<table class="total_table" border="0" style="margin-top: 10px">
  <tbody>
    <tr>
      <td>Dear <%= notice.employer_name %>:  </td>
    </tr>
  </tbody>
</table>

<%= render partial: 'notices/shared/paragraph_with_margins', :locals => {
  content: "MetLife and Delta Dental have notified the #{Settings.aca.hbx_abbreviation} Authority of their decision to cease new sales in the Small Business market as of January 1, 2018. If your organization offers dental coverage from either of these carriers through #{Settings.site.short_name}, your benefits administrator will have to update your group’s plan offerings.", top_margin: '5px', bottom_margin: '5px'} %>

<%= render partial: 'notices/shared/paragraph_with_margins', :locals => {
  content: "Groups that are interested in offering dental coverage in the upcoming plan year through #{Settings.site.short_name} will continue to have the following products as options in Plan Year 2018: CareFirst’s BlueDental Traditional (PPO) and BlueDental Preferred High (PPO), as well as Dominion’s Select Plan Premium (HMO), Choice PPO Basic (PPO), and Choice PPO Premium (PPO). Should you have any questions, feel free to reach out to the #{Settings.site.short_name} Contact Center #{notice.hbe.phone} 8:00am-6:00pm Monday through Friday.", bottom_margin: '10px'} %>

<%= render partial: 'notices/shared/paragraph_with_headers', :locals => {
  contents: ["Please contact your broker for further assistance.  You can also contact #{Settings.site.short_name} with any questions:"],
    heading: 'For Questions or Assistance:', sub_heading: ''} %>

<%= render partial: 'notices/shared/unordered_list', :locals => { listings:
  ["By calling #{notice.hbe.phone}",
    "TTY: #{Settings.contact_center.tty}",
    "Online at <a href=#{Settings.site.home_url}>#{Settings.site.website_name}</a>"]} %>

<% if notice.broker.present? %>
  <%= render partial: 'notices/shared/broker_contact_info', :locals => {broker: notice.broker} %>
<% else %>
  <%= render partial: 'notices/shared/paragraph', :locals => {
 content: "If you do not currently have a broker, you can reach out to one of our many trained experts by clicking on the “Find a Broker” link in your employer account or calling #{notice.hbe.phone}."} %>
<% end %>
