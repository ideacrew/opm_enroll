<table class="total_table" border="0">
  <tbody>
    <tr>
      <td>
        <% if notice.shop? %>
          <b><%= Settings.site.short_name %></b><br>
             <%= Settings.notices.shop_market.mail_address.address_1 %><br>
             <%= Settings.notices.shop_market.mail_address.address_2 %><br>
             <%= Settings.notices.individual_market.mail_address.city %>, <%= Settings.aca.state_abbreviation %> <%= Settings.notices.shop_market.mail_address.zip_code %><br>
        <% else %>
          <b><%= Settings.site.short_name %> Contact Center</b><br>
             <%= Settings.notices.individual_market.mail_address.address_1 %><br>
             <%= Settings.notices.individual_market.mail_address.city %>, <%= Settings.aca.state_abbreviation %> <%= Settings.notices.individual_market.mail_address.zip_code %><br>
        <% end %>
      </td>
      <td colspan="2" align="right"><a href= "#{Settings.site.home_url}"
                                    target= "_blank">
                                    <%= image_tag "#{Rails.root}/app/assets/images/#{Settings.site.mailer_logo_file_name}", style: "height: auto; vertical-align: top;", width: "100"  %>
                                    </a></td>
    </tr>
    <tr>
      <td><br></td>
    </tr>
  </tbody>
</table>