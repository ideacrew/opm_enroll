<% if CompositeRatingTier::VISIBLE_NAMES.include?(f.object.composite_rating_tier) %>
  <div class="row row-form-wrapper no-buffer">
    <fieldset>
      <div class="col-xs-5 form-group form-group-lg">
        <div class="checkbox">
          <label>
            <%= f.check_box :offered, {class: "contribution_handler #{f.object.composite_rating_tier}", disabled: (f.object.composite_rating_tier == 'employee_only' ? true : false)}, "true", "false" %>
            <%= f.label :offered do %>
              <i class="far fa-check-square fa-2x"></i>
              <i class="far fa-square fa-2x"></i>
            <% end %>

            <span>
              <%= f.hidden_field :composite_rating_tier, value: f.object.composite_rating_tier %>
              <p><%= f.object.composite_rating_tier.try(:humanize) %></p>
            </span>
          </label>
        </div>
      </div>

      <div class="col-xs-7 form-group form-group-lg">
        <div class="col-xs-12 row">
          <div class="col-xs-3">
            <%= f.number_field :employer_contribution_percent, class: "hidden-param contribution_handler premium-storage-input", value: f.object.employer_contribution_percent.try(:to_i), min: 0, max: 100 %>

          </div>
          <div class="col-xs-9" style="padding-top: 10px;">
            <input class="contribution_slide_handler slider premium-storage-input" data-slider-max="100" data-slider-min="0" data-slider-step="5" data-slider-value="0" type="number" value="<%=f.object.employer_contribution_percent.try(:to_i)%>"/>
            &nbsp;&nbsp;&nbsp;
            <span class="slide-label pull-right">0%</span>
            <!--<i class="fa fa-question-circle fa-lg"></i>-->
          </div>
        </div>
      </div>
    </fieldset>
  </div>
<% end %>
