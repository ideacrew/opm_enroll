<div class="col-lg-1 col-md-2 col-sm-2 col-xs-2 form-group form-group-lg no-pd border_bottom_zero">
  <div class="radio">
    <%= f.radio_button :is_applying_coverage, true, class: "required floatlabel", id: 'is_applying_coverage_true', checked: first_checked%>
    <label for="is_applying_coverage_true"><span>Yes</span></label>
  </div>
</div>
<div class="col-lg-2 col-md-2 col-sm-2 col-xs-6 form-group form-group-lg no-pd">
  <div class="radio">
    <%= f.radio_button :is_applying_coverage, false, class: "required floatlabel", id: 'is_applying_coverage_false', checked: second_checked %>
    <label for="is_applying_coverage_false"><span>No</span></label>
  </div>
</div>