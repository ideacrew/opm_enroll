<div class="table-responsive table-override">
  <table class="table table-striped table-bordered border-override" style="table-layout: fixed;">
    <td class="confirm-rehire-wrapper show_confirm_<%= @census_employee.id %>" colspan="10" id="enter-date">
      <tr>
        <td class="confirm-rehire-wrapper show_confirm_<%= @census_employee.id %>" colspan="11" id="enter-date">
          <span><%= image_tag "enter_rehire_date.png", alt: "Enter re-hire date.", width: "200", height: "" %></span>
          <span class="confirm-rehire" style="display:inline;">
              <input class="text-center date-picker" data-date-min="<%= rehire_date_min(@census_employee) %>d" placeholder="e.g. 5/1/2015" type="text">
              <a class="rehire-confirm rehire" data-link="<%= employers_employer_profile_census_employee_rehire_path(@employer_profile.id, @census_employee.id) %>" href="javascript:;" id="rehire_<%= @census_employee.id %>">
                <strong>&nbsp;Submit</strong>
              </a>
              <a class="rehire cancel" style="margin-right: 15px;">Cancel</a>
            </span>
        </td>
      </tr>
    </td>
  </table>
</div>
