<%if @errors_on_save %>
  <div class='alert alert-error'><a class='close' data-dismiss='alert'>x</a>
    <% @errors_on_save.each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  </div>
<% end %>

<div id=“change_fein”>
  <div class="bottom-pd">
    <%= form_for @organization, remote: true, url: update_fein_exchanges_hbx_profiles_path(id: params["id"], employer_actions_id: "employer_actions_#{@organization.employer_profile.id.to_s}"), method: "post", class: "form" do |f|%>
      <div class="row no-buffer form-wrapper-buffer">
        <div class="pull-right">
          <a href="javascript:void(0);" onclick="$('tr.child-row:visible').remove();">
            <span aria-hidden="true"> <i class="fa fa-times fa-lg"></i> </span>
          </a>
        </div>
        <h3 class="title text-center"><%= l10n("hbx_profiles.change_fein") %></h3>
        <div class="row no-buffer form-wrapper-buffer">
          <div class="col-lg-5 col-md-5 form-group form-group-lg no-pd top-buffer" >
            <div class="row_align_application_type pull-right">
              <span> <b> <%= l10n("hbx_profiles.new_fein") %> : &nbsp</b> </span>
            </div>
          </div>
          <div class="col-md-7 no-pd col-sm-7 col-xs-7">
          <%= f.text_field :new_fein, placeholder:  "#{l10n('.fein').to_s.upcase}", class: "required fien_field input_txt pull-left", :value => params[:new_fein].present? ? params[:new_fein] : @organization.fein, required: params[:new_fein].present? ? true : false, :input_html => {:maxlength => 15, :size => 40, :width => '100%'}
          %>
          </div>
        </div>
      </div>
      <div class="row no-buffer child-row">
        <div class="col-md-12 no-pd col-sm-12 col-xs-12 top-buffer text-center">
          <span class="btn btn-default" onclick="$('tr.child-row:visible').remove();"> <%= l10n(".cancel") %> </span>
          <%= f.submit l10n('.submit'), data: { confirm: l10n(".confirm") }, :class => "btn btn-primary", :size => '100px' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
