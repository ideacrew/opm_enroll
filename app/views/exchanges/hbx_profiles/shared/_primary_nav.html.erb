            <%= render partial: 'exchanges/hbx_profiles/shared/nav_link', locals: {
                                                                            tab_name: 'families',
                                                                            link_path: main_app.family_index_dt_exchanges_hbx_profiles_path,
                                                                            display_name: 'Families',
                                                                            active_tab: active_tab,
                                                                            glyphicon_class: 'glyphicon-briefcase'
                                                                          } %>
