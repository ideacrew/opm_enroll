%plan_year
  %plan_year_start= simple_date_for(plan_year.start_on)
  - unless plan_year.end_on.blank?
    %plan_year_end= simple_date_for(plan_year.end_on)
  %fte_count= plan_year.fte_count
  %pte_count= plan_year.pte_count
  %open_enrollment_start= simple_date_for(plan_year.open_enrollment_start_on)
  %open_enrollment_end= simple_date_for(plan_year.open_enrollment_end_on)
  - if plan_year.benefit_groups.any?
    %benefit_groups
      = render :partial => "events/employers/health_and_dental_benefit_group", :collection => plan_year.benefit_groups, as: :benefit_group
  = render :partial => "events/shared/versioned_resource", :object => plan_year
