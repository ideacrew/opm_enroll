#effective_datatable_wrapper{
  padding-left: 15px !important;
  padding-right: 15px !important;

  .btn-group > .btn-group {
    float: left;
  }

  .effective-datatable {
    font-size: 12px !important;
    //text-transform: uppercase;
    th, td{
      text-align: center !important;
    }
  }

  .admin_margin {
    margin-bottom: 10px !important;
    > td{
      text-align: left !important;
    }
  }

  table.table-bordered.table-bordered{
    border: 1px solid #d7d7d7;
  }

  .dt-buttons{
    border: 1px solid #d7d7d7 !important;
    float: left;
  }

  .dt-buttons > .buttons-bulk-actions, .btn-default{
    font-size: 14px !important;
  }

  .dt-buttons > a.btn-default{
    color: #525252 !important;
  }

  .dt-buttons > div > button.btn-default{
    color: #2E2E2E !important;
  }

  .form-control{
    width: 300px;
  }

  .input-sm{
    height: 20px;
  }

  div.dataTables_paginate{
    text-align: center !important;
  }

  .pagination > li > a{
    background: #ffffff !important;
    color: #337ab7 !important
  }

  .pagination > .active > a{
    background-color: #337ab7 !important;
    border-color: #337ab7 !important;
    color: #ffffff !important;
  }

  ul.pagination {
    background: #ffffff !important;
  }

  .pagination > .disabled > a{
    color: #777 !important;
  }

  .dataTables_info{
    font-size: 14px;
    color: #333;
    text-align: right !important;
  }

  .dataTables_length {
    padding: 0.675 !important;
    font-size: 14px;
    color: #333;
    margin-bottom: 4px !important;
    label{
      display: inline;
    }
    .selectric{
      max-width: 60% !important;
      height: 40px !important;
    }
  }

  .dataTables_length #per_page{
    display:inline-block;
    padding-top: 10px;
  }

  .selectric-wrapper{
    width: 100px;
  }

  .dropdown-menu .btn-info{
    background-color: #ffffff !important;
    border-color: #ffffff !important;
  }

  .dropdown-menu .btn-group-xs > .btn, .btn-xs{
    font-size: 11px !important;
  }

  .table-override{
    overflow-x: hidden !important;
  }
  .border-override{
    border: none !important;
  }

  .form-group-margin {
    margin-bottom: 15px !important;
  }

  input.input_txt{
    font-size: 14px !important;
  }

  .form-wrapper-buffer{
    padding: 15px !important;
  }

  .child-row{
    margin-left: 15px;
    margin-right: 15px;
  }

  input.csl_width{
    width: 225px;
    float: left;
  }

  /* Hide the Sort Icons on Column Headers */
  
  /* Prevented sort arrows from showing in thead */
  
  /*table.dataTable thead .sorting:after,
  table.dataTable thead .sorting_asc:after,
  table.dataTable thead .sorting_desc:after,*/
  
  table.dataTable thead .sorting_asc_disabled:after,
  table.dataTable thead .sorting_desc_disabled:after {
      display: none;
  }
}

.btns-group {
  margin-left: 2px;
}
