        = configuration_fields.text_field :oe_min_adv_dys, id: 'inputOpenEnrollmentAdvDays', required:'true', class:'form-control mb-1'
        label for="inputOpenEnrollmentMonthsMAx" Open Enrollment Months Max
        = configuration_fields.text_field :oe_max_months, id: 'inputOpenEnrollmentMonthsMAx', required:'true', class:'form-control mb-1'
        label for="inputCobraEnrollments" Cobra Enrollment Period Month
        = configuration_fields.text_field :cobra_epm, id: 'inputCobraEnrollments', required:'true', class:'form-control mb-1'
        label for="inputGroupFileNewEnrollment" Group File New Enrollment Transmit on
        = configuration_fields.text_field :gf_new_enrollment_trans, id: 'inputGroupFileNewEnrollment', required:'true', class:'form-control mb-1'
