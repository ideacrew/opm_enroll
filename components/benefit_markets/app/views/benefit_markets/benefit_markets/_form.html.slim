        = configuration_fields.select :gf_update_trans_dow, BenefitMarkets::Configurations::AcaShopConfiguration::TRANSMIT_DAYS, {selected: "Friday"},id: 'inputUpdateTransmitDay', required:'true', class:'form-control mb-1'
