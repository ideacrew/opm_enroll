        = configuration_fields.check_box :use_simple_er_cal_model, { class: 'form-control mb-1' }, 'true', 'false'
        label for="inputOfferingsServiceArea" Offerings Constrained To Service Areas
        = configuration_fields.check_box :offerings_constrained_to_service_areas, { class: 'form-control mb-1' }, 'true', 'false'
        label for="inputTransmitERImmediatly" Transmit Employers Immediately
        = configuration_fields.check_box :trans_er_immed, { class: 'form-control mb-1' }, 'true', 'false'
        label for="inputTransmitScheduledER" Transmit Scheduled Employers
        = configuration_fields.check_box :trans_scheduled_er, { class: 'form-control mb-1' }, 'true', 'false'
        label for="inputERTransmissionDayOfMonth" Employer Transmission Day Of Month
        = configuration_fields.text_field :er_transmission_dom, id: 'inputERTransmissionDayOfMonth', required:'true', class:'form-control mb-1'
        label for="inputEnforceEmployerAttestation" Enforce Employer Attestation
        = configuration_fields.check_box :enforce_er_attest, { class: 'form-control mb-1' }, 'true', 'false'
        label for="inputSIC" Standard Industrial Classification
        = configuration_fields.check_box :stan_indus_class, { class: 'form-control mb-1' }, 'true', 'false'
        label for="inputCarriersFiltersEnabled" Carrier Filters Enabled
        = configuration_fields.check_box :carrier_filters_enabled, { class: 'form-control mb-1' }, 'true', 'false'
        label for="inputRatingArea" Rating Areas
        = configuration_fields.text_field :rating_areas, id: 'RatingArea', required:'true', class:'form-control mb-1'
        h4 Initial Application
        = configuration_fields.fields_for :initial_application_configuration, configuration_fields.object.initial_application_configuration do |initial_application_fields|
          label for="inputPublishDueDayOfMonth" Publish Due Day Of Month
          = initial_application_fields.text_field :pub_due_dom, id: 'inputPublishDueDayOfMonth', required:'true', class:'form-control mb-1'
          label for="inputEarliestStartPriorToEffectiveOnMonths" Earliest Start Prior To Effective On Months
          = initial_application_fields.text_field :erlst_strt_prior_eff_months, id: 'inputEarliestStartPriorToEffectiveOnMonths', required:'true', class:'form-control mb-1'
          label for="inputAppealPeriodAfterAppDenialDays" Appeal Period After Application Denial Days
          = initial_application_fields.text_field :appeal_per_aft_app_denial_dys, id: 'inputAppealPeriodAfterAppDenialDays', required:'true', class:'form-control mb-1'
          label for="inputQuietPeriodEndOn" Quiet Period End On
          = initial_application_fields.text_field :quiet_per_end, id: 'inputQuietPeriodEndOn', required:'true', class:'form-control mb-1'
          label for="inputIneligiblePeriodAfterApplicationDenialDays" Ineligible Period After Application Denial Days
          = initial_application_fields.text_field :inelig_per_aft_app_denial_dys, id: 'inputIneligiblePeriodAfterApplicationDenialDays', required:'true', class:'form-control mb-1'
        h4 Renewal Application
        = configuration_fields.fields_for :renewal_application_configuration, configuration_fields.object.renewal_application_configuration do |renewal_application_fields|
          label for="inputEarliestStartPriorToEffectiveOnMonths" Earliest Start Prior To Effective On Months
          = renewal_application_fields.text_field :erlst_strt_prior_eff_months, id: 'inputEarliestStartPriorToEffectiveOnMonths', required:'true', class:'form-control mb-1'
          label for="inputMonthlyOpenEnrollmentEndOn" Monthly Open Enrollment End On
          = renewal_application_fields.text_field :montly_oe_end, id: 'inputMonthlyOpenEnrollmentEndOn', required:'true', class:'form-control mb-1'
          label for="inputPublishDueDayOfMonth" Publish Due Day Of Month
          = renewal_application_fields.text_field :pub_due_dom, id: 'inputPublishDueDayOfMonth', required:'true', class:'form-control mb-1'
          label for="inputForcePublishDayOfMonth" Force Publish Day Of Month
          = renewal_application_fields.text_field :force_pub_dom, id: 'inputForcePublishDayOfMonth', required:'true', class:'form-control mb-1'
          label for="inputOpenEnrollmentDaysMin" Open Enrollment Days Min
          = renewal_application_fields.text_field :oe_min_dys, id: 'inputOpenEnrollmentDaysMin', required:'true', class:'form-control mb-1'
          label for="inputQuietPeriodEndOn" Quiet Period End On
          = renewal_application_fields.text_field :quiet_per_end, id: 'inputQuietPeriodEndOn', required:'true', class:'form-control mb-1'