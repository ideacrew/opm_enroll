        = configuration_fields.text_field :oe_start_month, id: 'inputOpenEnrollmentStartMonthly', required:'true', class:'form-control mb-1'
        label for="inputOpenEnrollmentEndMonthly" Open Enrollment End On Montly
        = configuration_fields.text_field :oe_end_month, id:'inputOpenEnrollmentEndMonthly', required:'true', class:'form-control mb-1'
        label for="inputOpenEnrollmentDaysMin" Open Enrollment Days Min
        = configuration_fields.text_field :oe_min_dys, id: 'inputOpenEnrollmentDaysMin', required:'true', class:'form-control mb-1'
        label for="inputOpenEnrollmentGracePeriod" Open Enrollment Grace Period Length Days Min
        = configuration_fields.text_field :oe_grce_min_dys, id:'inputOpenEnrollmentGracePeriod', required:'true', class:'form-control mb-1'
