fieldset
  legend Site Information:
  .form-group
    label for="inputSite" Site
    = f.text_field :site_urn, required:'true', class:'form-control mb-1'
    label for="inputTitle" Title
    = f.text_field :title, required:'true', class:'form-control mb-1'
    label for="inputDescription" Description
    = f.text_field :description, class:'form-control mb-1'

fieldset
  legend Market Kind:
  .form-group
    label for="inputKind" Select Market Kind
    = f.select :kind, options_for_select({'ACA Individual' => 'aca_individual', 'ACA Shop' => 'aca_shop'}, @benefit_market.kind), {}, data: { target: 'benefit-market--form.select', action: 'change->benefit-market--form#configurationChange' }, class:'form-control mb-1'

fieldset 
  legend Individual Application:
  .form-group
    div data-target="benefit-market--form.aca_individual"
      = f.fields_for :aca_individual_configuration, @benefit_market.aca_individual_configuration do |configuration_fields|
        label for="inputEnrollmentDueOn" Monthly Enrollment Due On
        = configuration_fields.text_field :mm_enr_due_on, id: 'inputEnrollmentDueOn', required:'true', class:'form-control mb-1'
        label for="inputVerificationOutstanding" Verification Outstanding Window Days
        = configuration_fields.text_field :vr_os_window, id: 'inputVerificationOutstanding', required:'true', class:'form-control mb-1'
        label for="inputVerificationDue" Verification Due Days
        = configuration_fields.text_field :vr_due, id: 'inputVerificationDue', required:'true', class:'form-control mb-1'
        label for="inputEnrollmentStartOn" Open Enrollment Start On
        = configuration_fields.date_field :open_enrl_start_on, id: 'inputEnrollmentStartOn', required:'true', class:'form-control mb-1'
        label for="inputOpenEnrollmentEndOn" Open Enrollment End On
        = configuration_fields.date_field :open_enrl_end_on, id: 'inputOpenEnrollmentEndOn', required:'true', class:'form-control mb-1'
        h4 Inital Application
        = configuration_fields.fields_for :initial_application_configuration, configuration_fields.object.initial_application_configuration do |initial_application_fields|
          label for="inputPublishDueDayOfMonth" Publish Due Day Of Month
          = initial_application_fields.text_field :pub_due_dom, id: 'inputPublishDueDayOfMonth', required:'true', class:'form-control mb-1'
          label for="inputEarliestStartPriorToEffectiveOnMonths" Earliest Start Prior To Effective On Months
          = initial_application_fields.text_field :erlst_strt_prior_eff_months, id: 'inputEarliestStartPriorToEffectiveOnMonths', required:'true', class:'form-control mb-1'
          label for="inputAppealPeriodAfterAppDenialDays" Appeal Period After Application Denial Days
          = initial_application_fields.text_field :appeal_per_aft_app_denial_dys, id: 'inputAppealPeriodAfterAppDenialDays', required:'true', class:'form-control mb-1'
          label for="inputQuietPeriodEndOn" Quiet Period End On
          = initial_application_fields.text_field :quiet_per_end, id: 'inputQuietPeriodEndOn', required:'true', class:'form-control mb-1'
          label for="inputIneligiblePeriodAfterApplicationDenialDays" Ineligible Period After Application Denial Days
          = initial_application_fields.text_field :inelig_per_aft_app_denial_dys, id: 'inputIneligiblePeriodAfterApplicationDenialDays', required:'true', class:'form-control mb-1'

