<div id="employer-info" class="module forms">
  <div class="row row-form-wrapper no-buffer">
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg no-pd">
      <%= datepicker_control f, :hired_on, {:class => "interaction-field-control-census-employee-hired-on floatlabel form-control allow-future-date", :placeholder => "HIRE DATE", :'data-date-min' => "-110y", :'data-date-max' => "+0", required: false} %>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12 form-group form-group-lg">
      <div class="owner checkbox">
        <label>
          Is Owner?
        </label>
        <label class="vertically-aligned-row">
          <%= f.check_box :is_business_owner %>
          <%= f.label :is_business_owner do %>
          <i class="far fa-check-square fa-lg"></i>
          <i class="far fa-square fa-lg"></i>
          <% end %>
          <span>
            Owner?
          </span>
        </label>
      </div>
    </div>
  </div>
</div>